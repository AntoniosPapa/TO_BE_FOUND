<h1>Landing Page</h1>

<div class="container p-5">

  <%= link_to "check out  all the organisations", organisations_path(@user), class: "btn btn-success btn-sm" %>
  <% if current_user %>
    <%= link_to "My profile", profile_path(@user), class: "btn btn-success btn-sm" %>
  <% else %>
    <%= link_to "sign up", new_user_registration_path(@user), class: "btn btn-success btn-sm" %>
  <% end %>
</div>
