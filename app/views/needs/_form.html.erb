<%= simple_form_for [organisation, need] do |f| %>
          <%= f.input :name, collection: Need::NEEDS, label: 'Speciality of Workforce '  %>
          <%= f.input :description, as: :text, placeholder: "Describe specificaly the needs your organisation has and the kind of skillsets you would like the people who are gonna give their skills for your organisation, should have." %>
          <%= f.submit "Submit", class: 'btn btn-success' %>
<% end %>
